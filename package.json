{
  "name": "karma-config",
  "version": "1.5.5",
  "description": "Karma configuration builder with sensible defaults to minimize boilerplate",
  "keywords": [
    "karma",
    "config",
    "configuration",
    "defaults",
    "boilerplate",
    "test",
    "testing",
    "browser",
    "browser testing"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://jstools.dev/karma-config",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/karma-config.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {

    "debugging_ci": "node -e \"console.log(require('which').sync('node'));\"",

    "clean": "shx rm -rf .nyc_output coverage lib",
    "lint": "npm run lint:typescript && npm run lint:javascript",
    "lint:typescript": "tslint -p tsconfig.json",
    "lint:javascript": "eslint test",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha && npm run lint",
    "coverage": "nyc --reporter=text --reporter=lcov mocha",
    "upgrade": "npm-check -u",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "dependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "babel-loader": "^8.0.6",
    "coverage-istanbul-loader": "^2.0.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.2.0",
    "karma-host-environment": "^2.0.3",
    "karma-ie-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-sauce-launcher": "^2.0.2",
    "karma-verbose-reporter": "0.0.6",
    "karma-webpack": "^4.0.2",
    "ono": "^5.1.0",
    "webpack": "^4.41.0"
  },
  "devDependencies": {
    "@types/karma": "^3.0.3",
    "@types/karma-webpack": "^2.0.7",
    "@types/node": "^12.7.8",
    "@types/webpack": "^4.39.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "eslint": "^6.5.0",
    "eslint-config-modular": "^7.0.1",
    "mocha": "^6.2.1",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "package-json": "^6.5.0",
    "shx": "^0.3.2",
    "tslint": "^5.20.0",
    "tslint-modular": "^1.6.0",
    "typescript": "^3.6.3",
    "typescript-tslint-plugin": "^0.5.4",
    "version-bump-prompt": "^5.0.5"
  },
  "peerDependencies": {
    "karma": ">=4",
    "karma-cli": ">=2"
  }
}
